<div id="quick-stat">
  <div class="tool" id="image-container">
    <div class="tool-logo">QuickStat</div>

    <hr class="soften min-margin">

    <% unless user_signed_in? %>
      <p><i class="icon-signin"></i><%= link_to "Login", user_session_path %> for QuickStat capability</p>
    <% end %>

    <div class="btn-group" data-toggle="buttons-radio" id="button-container">
      <% if user_signed_in? %>
        <%= button_to (current_user.state == "IN"  ? "I am IN" : "IN"),   state_button_link("IN"),  { :method => :put, :remote => true, :class => state_button_class("IN") } %>
        <%= button_to (current_user.state == "OUT" ? "I am OUT" : "OUT"), state_button_link("OUT"), { :method => :put, :remote => true, :class => state_button_class("OUT") } %>
      <% else %>
        <%= button_to "IN",  '#', { :disabled => 'true', :class => state_button_class("IN")  } %>
        <%= button_to "OUT", '#', { :disabled => 'true', :class => state_button_class("OUT") } %>
      <% end %>
    </div>
  </div>
</div>
