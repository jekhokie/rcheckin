<%= form_for @user do |f| %>
  <div class="hero-unit">
    <form class="form-horizontal">
      <legend>New User Registration</legend>
      <div class="control-group">
        <label class="control-label" for="inputName">Name</label>
        <div class="controls">
          <%= f.text_field :name, :id => "inputName", :placeholder => "Name" %>
        </div>
      </div>
      <div class="control-group <%= "error" if @user.errors.messages[:email] %>">
        <label class="control-label" for="inputEmail">Email</label>
        <div class="controls">
          <%= f.text_field :email, :id => "inputEmail", :placeholder => "Email", :value => (@user.email.blank? ? '' : @user.email) %>
          <% if @user.errors.messages[:email] and !(controller_name == "users" and action_name == "new") %>
            <span class="help-inline">Email <%= @user.errors.messages[:email].first %></span>
          <% end %>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <%= f.submit "Register" %>
        </div>
      </div>
    </form>
    <hr />
    <h3>Existing User?</h3>
    <p>Try one of these other Sign In mechanisms, and
       then once signed in, add the new provider by going
       to the 'edit account' page.</p>
    <%= render "authentications/authentications_list" %>
  </div>
<% end %>
